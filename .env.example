# Backend API Configuration
NEXT_PUBLIC_API_URL=http://localhost:5000/api

# App Configuration
NEXT_PUBLIC_APP_NAME=RentNG
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Cloudinary Configuration (Image Uploads)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloud_name
NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET=unsigned_upload_preset

# Payment Gateway (Paystack or Flutterwave)
# NEXT_PUBLIC_PAYSTACK_PUBLIC_KEY=pk_test_xxxxx
# NEXT_PUBLIC_FLUTTERWAVE_PUBLIC_KEY=FLWPUBK_TEST_xxxxx

# Maps & Location (Mapbox or Google Maps)
# NEXT_PUBLIC_MAPBOX_TOKEN=pk_test_xxxxx
# NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=AIza...

# Analytics (Optional)
# NEXT_PUBLIC_GA_ID=G_XXXXXXX

# Error Tracking (Sentry)
# NEXT_PUBLIC_SENTRY_DSN=https://key@sentry.io/project-id

# Feature Flags
NEXT_PUBLIC_ENABLE_DEMO=false
NEXT_PUBLIC_ENABLE_REVIEWS=true
NEXT_PUBLIC_ENABLE_MESSAGING=true
