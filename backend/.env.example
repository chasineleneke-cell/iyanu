# RentNG Backend Environment Variables

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/rentng_db"

# JWT Secrets
JWT_ACCESS_SECRET="your-super-secret-access-token-key-min-32-chars"
JWT_REFRESH_SECRET="your-super-secret-refresh-token-key-min-32-chars"
JWT_ACCESS_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Server
NODE_ENV="development"
PORT=5000
API_URL="http://localhost:5000"
FRONTEND_URL="http://localhost:3000"

# File Upload (Cloudinary)
CLOUDINARY_CLOUD_NAME="your-cloudinary-name"
CLOUDINARY_API_KEY="your-cloudinary-key"
CLOUDINARY_API_SECRET="your-cloudinary-secret"

# Payment Gateway (Paystack)
PAYSTACK_PUBLIC_KEY="pk_test_your-paystack-public-key"
PAYSTACK_SECRET_KEY="sk_test_your-paystack-secret-key"

# Email (Optional - for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL="debug"
